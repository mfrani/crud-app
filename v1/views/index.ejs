<% include partials/header %>

<div class="container">
  <h1>Product List</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
        
        <% products.forEach(function(product){ %>
      <tr>
        <td><%= product.name %></td> 
        <td><%= product.price %></td>
        <td><%= product._id %></td>
        <td>
                <button id="update" type="button" class="btn btn-primary">Update</button></td>
        <td>
            <form method="post" action="/products/<%= product._id %>/delete">
                        <input type="hidden" name="_method" value="delete" />
                        <input type="submit" class="btn btn-danger" value='Delete' onClick="return confirm('Are you sure you want to delete?')" />
                    </form>
        </td>
      </tr>
        <% }); %>
    </tbody>
  </table>
  
  <form>
    <a href="/products/form">create new</a>
</form>
</div>
